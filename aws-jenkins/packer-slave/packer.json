{
  "builders": [
    {
      "name": "jenkins-dynamic-slave",
      "ami_name": "jenkins-dynamic-slave-ami",
      "ami_description": "Amazon Linux 2 AMI used by Jenkins for dynamic Jenkins slaves",
      "type": "amazon-ebs",
      "region": "eu-west-1",
      "source_ami": "ami-0bb3fad3c0286ebd5",
      "instance_type": "t2.micro",
      "ssh_username": "ec2-user",
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": 8,
          "volume_type": "gp2",
          "delete_on_termination": true
        }
      ]
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "./bootstrap.yml"
    }
  ]
}